/**app.wxss**/
@import 'weui.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 204rpx 0;
  box-sizing: border-box;
  background-color: #F8F8F8;
} 


.tabbar_box{  
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 130rpx;
    box-shadow: 0px -3px 4px rgba(222,222,222,0.85);
}
  
.tabbar_nav{
  position: relative;
  font-size: 28rpx;
  height: 100%;
}  
.tabbar_nav text{
  position: absolute;
  bottom: 5rpx;
  left:50%;
	transform:translateX(-50%);
}
.tabbar_nav image{
  position: absolute;
  bottom: 50rpx;
  left:50%;
	transform:translateX(-50%);
}
.tabbar_nav:nth-child(2) .tabbar_icon{
  width: 50rpx;
  height: 50rpx;
}
.tabbar_icon{  
    width: 50rpx;
    height: 50rpx;
}
