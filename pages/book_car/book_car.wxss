.main {
  display: flex;
  flex-direction: column;
  font-size: 15px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  height: 100vh;
  background-color: #f5f5f5;
}

.button {
  border: 1px solid #4cae4c;
  background-color: #5cb85c;
  font-size: 15px;
  color: #fff;
}

.info-title {
  font-size: 15px;
  font-weight: bold;
  line-height: 25px;
}

.info-area {
  padding-top: 20px;
}

.info-area .section {
  padding: 10px;
  margin-bottom: 20px;
  background-color: #fff;
}

.view-section {
  padding: 10px;
  margin-bottom: 20px;
  background-color: #fff;
  align-items: center;
}

.radio-group .radio-label {
  line-height: 35px;
  padding-left: 25px;
}

.btn-area {
  display: flex;
  flex-direction: row;
  margin-top: 30px;
}

.btn-area .button {
  width: 150px;
}

.btn-area .button.reset {
  background-color: #c9302c;
  border-color: #c9302c;
}

.img-banner {
  background-color: #fff;
  margin: auto;
  display: block;
  height: 110px;
}

.switch {
  padding-left: 20px;
}

.error-banner {
  background: red;
  height: 30px;
  width: 100vw;
  position: absolute;
  z-index: 100;
  left: 0px;
  top: -30px;
  text-align: center;
}

.error-banner .error-label {
  color: #fff;
  font-size: 14px;
}

.page__desc {
  margin-top: 5px;
  font-weight: 500 ;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  color: #888;
  text-align: left;
  font-size: 15px;
}
